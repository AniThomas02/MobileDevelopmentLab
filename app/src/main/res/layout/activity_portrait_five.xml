<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.krohn.lab1completed.MainActivity"
    android:weightSum="1"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_cards_and_table">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:id="@+id/layout_table_and_score">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:id="@+id/layout_trump_and_table"
                android:layout_weight="0.04">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="103dp"
                    android:id="@+id/layout_trump"
                    android:background="#45bbe7" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Trump:"
                        android:id="@+id/textView_trump"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:paddingLeft="4dp"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_trumpCard"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/frame_layout_table"
                    android:layout_weight=".55"
                    android:background="#c2dee8" />

            </LinearLayout>

            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.82"
                android:id="@+id/frame_layout_scoreboard"
                android:background="@drawable/scoreboard_border" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/layout_cards"
            android:layout_weight="2.16"
            android:background="#5360ae"
            android:baselineAligned="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/image_card1"
                android:layout_weight=".1"
                android:onClick="changeBackground" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/image_card2"
                android:layout_weight=".1"
                android:onClick="changeBackground" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/image_card3"
                android:layout_weight=".1"
                android:onClick="changeBackground" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/image_card4"
                android:layout_weight=".1"
                android:onClick="changeBackground" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/image_card5"
                android:layout_weight=".1"
                android:onClick="changeBackground" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/image_card6"
                android:layout_weight=".1"
                android:onClick="changeBackground" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/image_card7"
                android:layout_weight=".1"
                android:onClick="changeBackground" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/image_card8"
                android:layout_weight=".1"
                android:onClick="changeBackground" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/image_card9"
                android:layout_weight=".1"
                android:onClick="changeBackground" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/image_card10"
                android:layout_weight=".1"
                android:onClick="changeBackground" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
