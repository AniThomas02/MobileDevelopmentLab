<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.TableFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:id="@+id/layout_table"
        android:background="#c2dee8">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/image_table_card1"
            android:layout_weight=".2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/image_table_card2"
            android:layout_weight=".2"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/image_table_card3"
            android:layout_weight=".2" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/image_table_card4"
            android:layout_weight=".2" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/image_table_card5"
            android:layout_weight=".2" />
    </LinearLayout>

</FrameLayout>
